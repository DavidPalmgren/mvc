{% extends 'base.html.twig' %}

{% block title %}Create Form !{% endblock %}

{% block body %}



<h2>Add a book!</h2>
<form action="{{ path('library_submit') }}" method="POST">
    <div class="form-group">
    <label for="title">Title:</label>
    <input class="form-control" type="text" id="title" name="title" required placeholder="Oliver Twist"><br><br>
</div>
    <div class="form-group">
    <label for="isbn">ISBN:</label>
    <input class="form-control" type="number" id="isbn" name="isbn" required placeholder="0671442422"><br><br>
</div>
    <div class="form-group">
    <label for="author">Author:</label>
    <input class="form-control" type="text" id="author" name="author" required placeholder="Charles Dickens"><br><br>
</div>
    <div class="form-group">
    <label for="image">Image URL:</label>
    <input class="form-control" type="text" id="image" name="image" placeholder="default.jpg (optional)"><br><br>
</div>
    <div class="form-group">
    <label for="beskrivning">Beskrivning:</label>
    <textarea class="form-control" type="text" id="beskrivning" name="beskrivning" maxlength="255" placeholder="(optional)"></textarea><br><br>
    </div>
    <input class="btn btn-primary" type="submit" value="Submit">
  </form>
  <div style="margin-top: 10px;"class="my-4"><a href="{{ path('app_library_read_many') }}" class="btn btn-secondary" style="border:1px solid #337ab7;">Cancell</a></div>
{% endblock %}