{% extends "./base.html.twig" %}

{% block title %}My Card Game{% endblock %}

{% block body %}
<h1>CardDeckDraw</h1>

<p>Drar ett kort från toppen av kortleken</p>
<p>CardCount: {{ cardcount }}</p>
{% set suit = card|slice(-1)|first%}
{% if suit == "♡" or suit == "♢"%}
<p>Card:<span style="color:red;">[{{ card }}]</span></p>
{%endif%}
{% if suit == "♧" or suit == "♤"%}
<p>Card:<span">[{{ card }}]</span></p>
{%endif%}
<button onclick="window.location.reload()">Refresh</button>

{% endblock %}