{% extends "./base.html.twig" %}

{% block title %}Game Start{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        {%if data.winner is defined%}
        <div class="alert alert-primary" role="alert">
        <h1>Winner is: {{ data.winner }}</h1>hej
        </div>
        {%endif%}
        <div class="col-md-6">
            <h1>{{data.playername}}</h1>
            <p>Player Score: {{data.playervalue}}</p>
            <ul>
                {% for i, card in data.playercard%}
                    <li>
                        {{ card }}
                    </li>
                {% endfor %}
            </ul>
            <ul>
                {% for i, cardimg in data.playercardimg%}
                    <li>
                        {{ cardimg }}
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="col-md-6">
            <h1>BankerBernard</h1>
            <p>Banker Score: {{data.bankervalue}}</p>
            <ul>
                {% for i, card in data.bankercard%}
                    <li>
                        {{ card }}
                    </li>
                {% endfor %}
            </ul>
            <ul>
                {% for i, cardimg in data.bankercardimg%}
                    <li>
                        {{ cardimg }}
                    </li>
                {% endfor %}
            </ul>
            
    </div>
</div>
<p><a href="{{path('game_hit')}}">Hit</a></p>
<p><a href="{{path('game_stand')}}">Stand</a></p>
{% endblock %}
